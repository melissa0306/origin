
<body>
	<div class="container">
		<% content_for :title, "Sign up" %> 
		<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  		<%= devise_error_messages! %>

    
  		<div class="field">
    		<%= f.label :username %>
    		<%= f.text_field :username, autofocus: true %><br />
  		</div>
  
  		<div class="field">
    		<%= f.label :geburtstag %>
    		<%= f.date_field :birthday %><br />
    		</br>
  		</div>
  
		<div class="field">
			<%= f.label :Wohnort %>
			<%= f.text_field :place_of_residence %><br />
		</div>
  
   		<div class="field">
   			<%= f.label :email %>
    		<%= f.email_field :email %><br />
  		</div>

  		<div class="field">
    		<%= f.label :passwort %>
    		<% if @minimum_password_length %>
    			<em>(mindestens <%= @minimum_password_length %> Zeichen)</em>
    		<% end %><br />
    		<%= f.password_field :password, autocomplete: "off" %> <br />
  		</div>

  		<div class="field">
    		<%= f.label :passwort_bestÃ¤tigen %>
    		<%= f.password_field :password_confirmation, autocomplete: "off" %><br />
  		</div>

  		<div class="actions">
    		<%= f.submit "Sign up" %>
  		</div>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>

</body>
